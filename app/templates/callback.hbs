
<div class="container-full sub-app" >
<form>
    <div class="form-group row">
        <label class="col-sm-1 form-control-label">Name:</label>
        <div class="col-sm-3">
            {{input class="form-control" value=name  placeholder="Name"}}
        </div>
    </div>

    <div class="form-group row">
        <label for='lastName' class="col-sm-1 form-control-label">Phone:</label>
        <div class="col-sm-3">
            {{input class="form-control" value=phone type="tel"  placeholder="Phone" }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 form-control-label">Date:</label>
        <div class="col-sm-3">
            {{input class="form-control" value=date  type="date"  }}
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-1 form-control-label">Time:</label>
        <div class="col-sm-3">
            {{input class="form-control" value=time  type="time"}}
        </div>
    </div>


    <div class="form-group row">
        <label for='lastName' class="col-sm-1 form-control-label">Queue:</label>
        <div class="col-sm-3">
            <select  class="form-control setting" onchange={{action 'selectQueue' value="target.value"}}>
                {{#each queues as |queueOption|}}
                  <option value={{queueOption.id}} selected={{eq queue queueOption.id}}>{{queueOption.name}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3">
            <a class="btn btn-primary " {{action 'createCallback'}} href="#" role="button">Create Callback</a>
        </div>
    </div>
    {{#if callbackCreated}}
    <div class="alert alert-success" role="alert" >Callback Created</div>
    {{/if}}
</form>
</div>
