<form class="form form-horizontal form-horizontal-labels-left form-flex form-flex-1-col form-flex-has-delete">

    <div class="form-group form-group-offset">
        <label class='control-label capitalize'>View Name</label>
        {{input value=viewRef.name}}
        <button class='btn btn-link btn-delete' {{action 'delete'}}>
            <i class="ion-close-round" aria-hidden="true"></i>
        </button>
    </div>
    <div class="form-group form-group-offset">
        <label class='control-label capitalize'>Metric</label>
        {{select-box items=metrics selectedItem=metric}}

    </div>

    <div class="form-group form-group-offset">
        <label class="control-label">Range</label>
        {{range-editor gte=gte lt=lt }}
    </div>
</form>
