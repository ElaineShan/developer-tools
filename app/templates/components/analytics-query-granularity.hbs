<h2>Granularity</h2>

<div class="query-indent">

    <div class="checkbox">
        <label>{{input type="checkbox" checked=noGranularity }}Default Granularity (Start Time to End Time)</label>
    </div>
    {{#if (eq noGranularity false)}}
    <div class='row'>
        <div class='col-md-2'>
            {{select-box-advanced idKey='value' nameKey='text' items=availableValues selectedItem=granularity}}
        </div>

    </div>
    {{/if}}
</div>
