  <select  class="form-control " onchange={{action 'selectItem' value="target.value"}}>
      {{#if includeBlank}}
      <option>
    <option value='' selected={{eq selectedItem ''}} ></option>      
      </option>
      {{/if}}
    {{#each items as |item|}}
      <option value={{getprop item idKey}} selected={{eq selectedItem (getprop item idKey)}} >{{getprop item nameKey}}</option>
    {{/each}}
  </select>
